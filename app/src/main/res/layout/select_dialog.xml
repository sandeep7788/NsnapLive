<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:gravity="center_horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
android:visibility="visible"
android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialogM"
    android:background="@drawable/react_bg"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:paddingEnd="50dp"
    android:paddingTop="8dp"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal"
    android:paddingBottom="40dp"
    android:paddingStart="50dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/reply"
            android:layout_marginEnd="50dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/reply"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/forward"
            android:layout_marginStart="50dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/forward"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/copy"
            android:layout_margin="6dp"
            android:src="@drawable/ic_copy"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/fav"
            android:layout_margin="6dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_notstar"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/retry"
            android:layout_margin="6dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_refresh_b"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/delete"
            android:layout_margin="6dp"
            android:src="@drawable/ic_delete_r"
            android:tint="@color/colorPrimary"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/deleteall"
            android:tint="#EA2027"
            android:layout_margin="6dp"
            android:src="@drawable/ic_delete_b"
            />
    </LinearLayout>



</LinearLayout>

<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/avatarSet"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:src="@drawable/profile"
    android:layout_centerHorizontal="true"
    />

</RelativeLayout>